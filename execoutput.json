    "def write_dirs_to_file(file_path, content_list):\n",
    "    with open(file_path, 'r') as file:\n",
    "            existing_content = file.read().splitlines()\n",
    "            \n",
    "    with open(file_path, 'a') as file:\n",
    "        for item in content_list:\n",
    "            if item not in existing_content:\n",
    "                file.write(f\"{item}\\n\")"
   ]
  },
